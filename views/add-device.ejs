          <form class="form-horizontal" action="/add" method="post" role="form">
            <div class="panel panel-default">
              <div class="panel-heading panel-color"><h6 class="panel-title"><i class="icon-paragraph-right2"></i>Enter the following information</h6></div>
              <div class="panel-body">

                <div class="form-group">
                  <label class="col-sm-2 control-label text-right">Name:</label>
                  <div class="col-sm-10">
                    <input type="text" name="name" class="form-control" placeholder="VNPT MUX VDO">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-2 control-label text-right">IP Address:</label>
                  <div class="col-sm-10">
                    <input type="text" name="ip_address" class="form-control" placeholder="192.168.1.1">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-2 control-label text-right">Location:</label>
                  <div class="col-sm-10">
                    <select data-placeholder="Location" name="location"
                            class="form-control">
                      <option value="0">VDO</option>
                      <option value="1">ATCC</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-2 control-label text-right">Type:</label>
                  <div class="col-sm-10">
                    <select data-placeholder="Type" name="type"
                            class="form-control">
                      <option value="0">VSAT</option>
                      <option value="1">VIETEL</option>
                      <option value="2">VNPT</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-2 control-label text-right">Read Community String:</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="public" name="read_community">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-2 control-label text-right">Write Community String:</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="private" name="write_community">
                  </div>
                </div>





